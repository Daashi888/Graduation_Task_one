<h1>Pets</h1>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= search_form_for @q do |f| %>

      <%= f.label :select_animal, "Keyword" %>
      <%= f.search_field :select_animal_cont, Pet.select_animals  %>
    
      <%= f.label :age %>
      <%= f.number_field :age_gteq %>以上〜
      <%= f.number_field :age_lt %>未満
    
      <%= f.label :sex %>
      <%= f.radio_button :sex_eq, '', {:checked => true} %>指定なし
      <%= f.radio_button :sex_eq, 1 %>オス
      <%= f.radio_button :sex_eq, 2 %>メス
      
      <%= f.submit "検索" %>
    <% end %>

    <% @pets.each do |pet| %>
      <tr>
        <td><%= image_tag pet.image.url, size:"80x80" %></td>
        <td><%= pet.title %></td>
        <td><%= pet.content %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pet', new_pet_path %>
