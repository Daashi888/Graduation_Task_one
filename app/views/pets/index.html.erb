<h1>Pets</h1>
<p id="notice"><%= notice %></p>

<#%= form_with(url: pets_path, method: :get, local: true) do |form| %>
  <#%= form.text_field :search %>
  <#%= form.submit 'Search' %>
<#% end %>

<#%= search_form_for @q do |f| %>
  <#%= f.label :title, "キーワードを入力してください" %>
  <#%= f.search_field :title_cont %>

  <#%= f.submit "検索" %>
<#% end %>

<p>
  <%= link_to '新しい順', pets_path(early_registration_date: "true") %>
  <%= link_to '古い順', pets_path(old_registration_date: "true") %>
</p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @pets.each do |pet| %>
      <tr>
        <td><%= image_tag pet.image.url, size:"80x80" %></td>
        <td><%= pet.content %></td>
        <% if current_user %>
          <td><%= link_to 'Show', pet %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <% if current_user.role == "recruiter" %>
    <%= link_to '新規の募集を投稿する', new_pet_path %>
  <% end %>

  <% if current_user.role != "recruiter" %>
    <%= link_to 'お気に入り登録一覧', favorites_path %>
  <% end %>
<% end %>