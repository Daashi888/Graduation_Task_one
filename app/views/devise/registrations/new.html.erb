<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "姓" %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "名" %><br />
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "ユーザーネーム" %><br />
    <%= f.text_field :nickname, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフン無し7桁)" %><br />
    <%= f.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "都道府県" %><br />
    <%= f.select :prefecture, User.prefectures.keys, {} %>
  </div>

  <div class="field">
    <%= f.label "市区町村" %><br />
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "番地" %><br />
    <%= f.text_field :ward_town, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "建物名・部屋番号" %><br />
    <%= f.text_field :other_address, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :性別 %>
    <%= f.select :gender, User.genders.keys.map {|k| [I18n.t("enums.user.gender.#{k}"), k]}, { include_blank: "選択してください"} %>
  </div>

  <div class="field">
    <%= f.label "職業" %><br />
    <%= f.text_field :occupation, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :権限種別 %>
    <%= f.select :role, [["里親募集主", "recruiter"], ["譲渡希望者", "receiver"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
